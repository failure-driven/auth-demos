<!DOCTYPE html>
<html>
  <head>
    <title>AuthDemos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to('Home', root_path) %>
    <% if defined?(Devise) && user_signed_in? %>
      <%= link_to('Devise Logout', destroy_user_session_path, method: :delete) %>
    <% end %>
    <% if defined?(Clearance) && signed_in? %>
      <%= button_to 'Clearance Sign out', sign_out_path, method: :delete %>
    <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
